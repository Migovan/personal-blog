.file-upload
  position relative
  overflow hidden
  width 20%
  height 20px
  border-radius 20px
  padding 8px 4px
  text-align center
  margin 10px 0
  font-family sans-serif
  font-weight bold
  font-size 14px
  color #fff
  background-color rgba(10, 69, 234, 0.3)
  &:hover
    background-color rgba(10,69,234,.46)
  input[type="file"]
    display none
  label
    display block
    position absolute
    top 0
    left 0
    width 100%
    height:100%
    cursor pointer
  span
    line-height 36px