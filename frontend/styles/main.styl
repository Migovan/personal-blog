@import "add-image.styl"

body
  font-size 16px
  margin 0
  padding 0
  background-color rgb(172, 221, 247)

.box-content
  width 40%
  margin 50px auto
  padding 20px
  border-radius 22px
  background-color #fff
  box-shadow 0 0 17px rgba(122, 107, 107, 0.5)
  a
    text-decoration none
  h2
    margin-bottom 3px 0

.box-content-preview
  width 40%
  margin 50px auto
  padding 20px
  border-radius 22px
  background-color #fff
  box-shadow 0 0 17px rgba(122, 107, 107, 0.5)
  transition: all 0.25s ease-out
  &:hover
    transform: scale(1.015)
    box-shadow: 0 5px 20px rgba(122, 107, 107, 0.5)


.icon
  float right
  width 15px
  cursor pointer
  margin-left 5px

.window-paper
  textarea
    width 100%
    height 300px
    font-family sans-serif
  div
    margin: 20px 0;
    display: flex;
    flex-direction: row;
    align-items: center
  img
    margin-right 10px
  span
    font-size: 14px;
    margin: 5px;
  input
    margin 0

.head
  width 100%
  font-size 14px

.button_create
  width 16%
  margin 50px auto
  button
    width 300px
    height 40px
    border snow
    border-radius 22px
    cursor pointer
    background-color rgba(10, 69, 234, 0.3)
    color #fff
    font-weight bold
    font-size 16px
    &:hover
      background-color rgba(10, 69, 234, 0.46)

.image-paper
  width 400px

.image-paper-preview
  width 250px

.head-edit
  width 47%
  margin 5px auto 25px

.head-preview
  margin 10px 0 0 0px

.date
  font-size 13px
  margin 10px 0px
  color #939393

.filter
  width: 16%;
  margin: 30px auto 0
  input
    width: 300px;
    border-radius: 20px;
    border: inherit;
    height: 21px;
    padding: 4px;
