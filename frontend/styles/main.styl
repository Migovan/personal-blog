body
  font-size 16px
  margin 0
  padding 0

.box
  width 40%
  margin 50px auto
  padding 1%
  border solid 1.5px
  border-radius 22px
  a
    text-decoration none
  img
    float right
    width 15px
    cursor pointer
    margin-left 5px

.window-paper
  textarea
    width 100%
    height 400px
    font-family sans-serif

.head
  width 100%

.thumb
  height 500px
  border 1px solid #000
  margin 10px 5px 0 0

.create-paper
  margin 20px auto
  width 22%

.button
  width 170px
  height 30px
  background-color transparent
  border solid 1.5px
  border-radius 22px


.buttons
  display: flex;
  width: 70%;
  margin: auto;
  flex-direction: row;
  justify-content: space-around;

.button_create
  width 16%
  margin 50px auto
  button
    width 300px
    height 40px
    background-color transparent
    border solid 1.5px
    border-radius 22px
    background-color rgba(10, 69, 234, 0.12)
    &:hover
      background-color rgba(10, 69, 234, 0.25);

.button-link
  color #000
  margin auto
  width 170px
  border 1.5px solid
  border-radius 22px
  height 22px
  text-align center






