@import "add-image.styl"

body
  font-size 16px
  margin 0
  padding 0
  background-color rgb(172, 221, 247)

.box-content
  width 40%
  margin 50px auto
  padding 20px
  border-radius 22px
  background-color #fff
  a
    text-decoration none
  h2
    margin-bottom -5px

.icon
  float right
  width 15px
  cursor pointer
  margin-left 5px

.window-paper textarea
  width 100%
  height 300px
  font-family sans-serif

.head
  width 100%

.button_create
  width 17%
  margin 50px auto
  button
    width 300px
    height 40px
    border snow
    border-radius 22px
    cursor pointer
    background-color rgba(10, 69, 234, 0.3)
    color #fff
    font-weight bold
    font-size 16px
    &:hover
      background-color rgba(10, 69, 234, 0.46)

.image-paper
  width 400px

.image-paper-preview
  width 250px

.head-edit
  width 47%
  margin 5px auto 25px

.head-preview
  margin 10px 0 0 0px
